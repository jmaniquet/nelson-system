<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	
	<!--
		Pour des explications sur l'élément 'ordering' :
		https://blogs.oracle.com/rlubke/entry/jsf_configuration_resource_ordering
		Notamment :
		'if a document has ordering requirements, but no name, then the ordering requirements will be ignored.'
	-->
	<name>nelson</name>
	
	<application>
		<resource-handler>org.nelson.system.core.web.resource.handler.MetaInfCustomDirResourceHandler</resource-handler>
	</application>
	<converter>
		<converter-id>themeConverter</converter-id>
		<converter-class>org.nelson.system.core.web.theme.ThemeConverter</converter-class>
	</converter>
</faces-config>