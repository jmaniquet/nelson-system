<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd"
		version="2.0">
	<namespace>http://java.sun.com/jsf/composite/nelson</namespace>
	<tag>
		<tag-name>outputMessage</tag-name>
		<component>
			<component-type>nelson.faces.OutputMessage</component-type>
			<renderer-type>nelson.faces.OutputMessage</renderer-type>
		</component>
		<attribute>
			<description><![CDATA[Nom du bean dans lequel chercher la clé - default : messageSource]]></description>
			<name>messageSource</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
		<attribute>
			<description><![CDATA[Clé du message à rechercher]]></description>
			<name>key</name>
			<required>false</required>
			<type>java.lang.String</type>
		</attribute>
	</tag>
</facelet-taglib>