<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
						http://www.springframework.org/schema/webflow/spring-webflow.xsd"
						parent="core/default">

	<on-start>
		<evaluate expression="personneCreationController.init()" />
	</on-start>

	<view-state id="creation" view="/personne/creation/creation.xhtml">
		<transition on="finish" to="finished">
			<evaluate expression="personneCreationController.create()" />
		</transition>
		<transition on="cancel" to="canceled" />
	</view-state>
	
	<end-state id="finished" view="externalRedirect:contextRelative:/app/personne/consultation?id=#{personneCreationController.personne.id}" />
	<end-state id="canceled" view="externalRedirect:contextRelative:/close.html" />
</flow>